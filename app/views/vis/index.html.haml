%div{class: 'col-xs-4'}
	%div{class: 'row'}
		%select{class: 'selectpicker', title: 'Select Demo Movie', id: 'video-selector'}
			/ %option{value: 'pacific_rim', file: 'pacific_rim.mp4'} Pacific Rim
			%option{value: 'apple', file: 'Apple.mp4'} Apple
			%option{value: 'disney', file: 'Disney.avi'} Disney
			%option{value: 'hussein_day1', file: 'Hussein_Day1_007.avi'} Hussein Day
			%option{value: 'michael_day2', file: 'Michael_Day2_018.avi'} Michael Day
			%option{value: 'usc_week', file: 'USCWeek.avi'} USC Week

%div{class: 'col-xs-8'}
	%div{class: 'row'}
		%video{id: 'video-player', controls: true, autoplay: true, preload: true, fluid: true}
			/ %source{src:'/videos/pacific_rim.mp4'}

%div{class: 'row'}
%div{id: 'pane', style: 'margin-top: 8px'}

= javascript_include_tag 'http://vjs.zencdn.net/6.2.8/video.js'
= javascript_include_tag 'velocity.min'
= javascript_include_tag 'bootstrap-select.min'
= javascript_include_tag 'dynaloader'
= javascript_include_tag 'layout'
= javascript_include_tag 'inspector'
= stylesheet_link_tag 'http://vjs.zencdn.net/6.2.8/video-js.css'
= stylesheet_link_tag 'bootstrap-select.min'

:javascript
	layout.attach()